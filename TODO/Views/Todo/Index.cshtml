@model IEnumerable<TODO.Models.Todo>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.TodoTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TodoIsCompleted)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.TodoTitle)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TodoIsCompleted)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TodoId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TodoId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TodoId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
